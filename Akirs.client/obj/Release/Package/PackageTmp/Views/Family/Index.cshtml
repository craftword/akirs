
@{
    ViewBag.Title = "Family";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .error {    
        color: #ff0000;
        font-size: 9px;
        margin-top: 5px;
        margin-bottom: 0;
    }

    .inputTxtError {
        border: 1px solid #ff0000;
        color: #0e0e0e;
    }
     .buttonDash {
        background-color: #57ACE7;
        color: white;
    }

        .buttonDash:hover {
            background-color: white;
            color: black;
            border: 2px solid #57ACE7;
        }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Family</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="display:flex;justify-content:space-between">
                    <a id="btnNew" class="btn btn-default editor_create"><i class="fa fa-plus"></i> Add New</a>
                    <input type='button' value='Back to Dashboard' class="btn btn-dark buttonDash" onClick='dashboardbackOnClick()' />
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-striped table-bordered table-hover familytable">
                            <thead>
                                <tr>

                                    <th>FullName</th>
                                    <th>Relationship Type</th>
                                    <th>Age</th>
                                     <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:450px">
            <div class="modal-content">
                @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formFamily" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <div class="modal_loader loader2" style="display:none">
                            <i class="fa fa-spinner fa-spin fa-1x"></i>
                        </div>
                        <h4 class="modal-title" id="myModalLabel"><i class="fa fa-plus"></i> Add/Edit Family</h4>


                    </div>

                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="alert alert-dismissible fade in notyModal" role="alert" style="display:none">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">

                                    <span aria-hidden="true">×</span>

                                </button>
                                <span class="notyModalMsg">

                                </span>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">FullName<span class="required"> *</span></label>
                                <div class="col-md-8">
                                    <div class="">
                                        <input type="text" id="FullName" name="FullName" placeholder="" class="form-control" />
                                    </div>

                                </div>
                                <div class="clearfix"> </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">RelationShip</label>
                                <div class="col-md-8">
                                    <select class="form-control" name="RelationshipType" id="RelationshipType"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Age<span class="required"> *</span></label>
                                <div class="col-md-8">
                                    <div class="">
                                        <input type="text" id="Age" name="Age" placeholder="" class="form-control" />
                                        <input type="hidden" id="ItbID" name="ItbID" />

                                    </div>

                                </div>
                                <div class="clearfix"> </div>
                            </div>

                            <div class="form-group" id="divStatus" style="display:none">
                                <label class="col-md-4 control-label">Status</label>
                                <div class="col-md-8">
                                    <select class="form-control" name="Status" id="Status">
                                        <option value="A">Active</option>
                                        <option value="C">Close</option>
                                    </select>
                                </div>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary btn_disable" id="btnSave" value="1"><i class="fa fa-save"></i>Save</button>
                                   
                                </div>
                }
            </div>

        </div>
    </div>
    <div class="ajax-loader">
        <img src="~/resources/images/ajax-loader.gif" class="img-responsive" />
    </div>
</div>
<div id="loader" style="display:none" data-request-url="@Url.Action("FamilyList", "Family")"></div>
<div id="createurl" style="display:none" data-request-url="@Url.Action("ViewDetail", "Family")"></div>
<div id="relationshipurl" style="display:none" data-request-url="@Url.Action("RelationShipList", "Family")"></div>
<div id="createfamilyurl" style="display:none" data-request-url="@Url.Action("Create", "Family")"></div>

@section Scripts {

    <script src="~/resources/js/family.js"></script>

    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
    </script>
<script>
        function dashboardbackOnClick() {
           // window.location.assign("http://localhost:27035/UserHome");
            window.location.assign("http://62.173.32.98:Revenuepoint/UserHome");
        }
</script>
}