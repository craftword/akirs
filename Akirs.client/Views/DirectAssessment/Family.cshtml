
@{
    ViewBag.Title = "Family";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Family</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button type="button" class="btn btn-default"><i class="fa fa-plus"></i>Add new details</button>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover familytable">
                            <thead>
                                <tr>
                                    
                                    <th>FullName</th>
                                    <th>Age</th>
                                    <th>Relationship Type</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:450px">
            <div class="modal-content">
                @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formFamily" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <div class="modal_loader loader2" style="display:none">
                            <i class="fa fa-spinner fa-spin fa-1x"></i>
                        </div>
                        <h4 class="modal-title" id="myModalLabel"><i class="fa fa-plus"></i> Add/Edit Family</h4>


                    </div>

                                <div class="modal-body">
                                    <div class="form-horizontal">
                                        <div class="alert alert-dismissible fade in notyModal" role="alert" style="display:none">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">

                                                <span aria-hidden="true">×</span>

                                            </button>
                                            <span class="notyModalMsg">

                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">FullName<span class="required"> *</span></label>
                                            <div class="col-md-8">
                                                <div class="">
                                                    <input type="text" id="FullName" name="FullName" placeholder="" class="form-control" />
                                                </div>

                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">RelationShip</label>
                                            <div class="col-md-8">
                                                <select class="form-control" name="RelationshipType" id="RelationshipType"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Age<span class="required"> *</span></label>
                                            <div class="col-md-8">
                                                <div class="">
                                                    @*<span class="input-group-addon"><span class="fa fa-user"></span></span>*@
                                                    <input type="text" id="Age" name="Age" placeholder="" class="form-control" />
                                                    <input type="hidden" id="ItbID" name="ItbID" />

                                                </div>

                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>

                                        <div class="form-group" id="divStatus" style="display:none">
                                            <label class="col-md-4 control-label">Status</label>
                                            <div class="col-md-8">
                                                <select class="form-control" name="Status" id="Status">
                                                    <option value="Active">Active</option>
                                                    <option value="Close">Close</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="clearfix"> </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                                    <button type="submit" class="btn btn-primary btn_disable" id="btnSave" value="1"><i class="fa fa-save"></i>Save</button>
                                    <a class="btn btn-default editor_reset" id="btnRefresh"><i class="fa fa-refresh"></i> Reset</a>

                                </div>
                }
            </div>

        </div>
    </div>

</div>

@section Scripts {
<script src="~/resources/js/family.js"></script>
    
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>
}