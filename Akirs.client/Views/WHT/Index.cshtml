
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .buttonDash {
        background-color: #57ACE7;
        color: white;
    }

    .buttonDash:hover {
        background-color: white;
