
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .buttonDash {
        background-color: #57ACE7;
        color: white;
    }

        .buttonDash:hover {
            background-color: white;
            color: black;
            border: 2px solid #57ACE7;
        }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">User Profile</h1>
        </div>
    </div>
    <div class="row">


        <div class="col-lg-12" id="pnlGrid">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-list" style="color:#57ACE7;"></i>  Users List
                    <a id="btnNew" class="btn btn-default editor_create"><i class="fa fa-plus"></i> Add New</a>
                  
                    <input type='button' value='Back to Dashboard' class="btn btn-dark buttonDash" style="margin-left:690px" onClick='dashboardbackOnClick()' />

                </div>
                <div class="panel-body ">
                  
                        <div class="table-responsive">
                            <table id="example1" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>

                                        <th>FirstName</th>
                                        <th>LastName</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th style="">Action? </th>

                                    </tr>
                                </thead>
                                <tbody></tbody>

                            </table>
                        </div>
                    
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog" style="width:450px;height:auto">
                            <div class="modal-content">
                                @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formUserProfile" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <div class="modal_loader loader2" style="display:none">
                                            <i class="fa fa-spinner fa-spin fa-1x"></i>
                                        </div>
                                        <h4 class="modal-title" id="myModalLabel"><i class="fa fa-plus"></i> Add/Edit Users</h4>


                                    </div>

                                    <div class="modal-body">
                                        <div class="form-horizontal">
                                            <div class="alert alert-dismissible fade in notyModal" role="alert" style="display:none">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">

                                                    <span aria-hidden="true">×</span>

                                                </button>
                                                <span class="notyModalMsg">

                                                </span>
                                            </div>




                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Username<span class="required"> *</span></label>
                                                <div class="col-md-8">
                                                    <div class="">
                                                        @*<span class="input-group-addon"><span class="fa fa-user"></span></span>*@
                                                        <input type="text" id="Username" name="Username" placeholder="" class="form-control" />
                                                        <input type="hidden" id="EnrollmentIDp" name="EnrollmentID" value="@ViewBag.EnrollID" />
                                                    </div>

                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-4 control-label">FirstName<span class="required"> *</span></label>
                                                <div class="col-md-8">
                                                    <div class="">
                                                        @*<span class="input-group-addon"><span class="fa fa-user"></span></span>*@
                                                        <input type="text" id="FirstName" name="FirstName" placeholder="" class="form-control" />
                                                        <input type="hidden" id="EnrollmentID" name="EnrollmentID" value="@ViewBag.EnrollID" />
                                                    </div>

                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">LastName<span class="required"> *</span></label>
                                                <div class="col-md-8">
                                                    <div class="">
                                                        @*<span class="input-group-addon"><span class="fa fa-user"></span></span>*@
                                                        <input type="text" id="LastName" name="LastName" placeholder="" class="form-control" />

                                                    </div>


                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Email<span class="required"> *</span></label>
                                                <div class="col-md-8">
                                                    <div class="">
                                                        @*<span class="input-group-addon"><span class="fa fa-user"></span></span>*@
                                                        <input type="text" id="Email" name="Email" placeholder="" class="form-control" />
                                                        <input type="hidden" id="ItbID" name="ItbID" />

                                                    </div>

                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-4 control-label">Role</label>
                                                <div class="col-md-8">
                                                    <select class="form-control" name="RoleId" id="RoleId"></select>
                                                </div>
                                            </div>
                                            <div class="form-group" id="divStatus" style="display:none">
                                                <label class="col-md-4 control-label">Status</label>
                                                <div class="col-md-8">
                                                    <select class="form-control" name="Status" id="Status">
                                                        <option value="A">Active</option>
                                                        <option value="C">Close</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary btn_disable" id="btnSave" value="1"><i class="fa fa-save"></i>Save</button>
                                        <a class="btn btn-default editor_reset" id="btnRefresh"><i class="fa fa-refresh"></i> Reset</a>

                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                    <!-- END DEFAULT DATATABLE -->
                    <!-- START FORM -->
                    <!-- END FORM -->
                </div>
            </div>
        </div>


    </div>
    </div>

<div id="roleList" style="display:none" data-request-url="@Url.Action("RolesList", "Users")"></div>
<div id="userviewdetails" style="display:none" data-request-url="@Url.Action("ViewDetail", "Users")"></div>
<div id="userviewlist" style="display:none" data-request-url="@Url.Action("UserList", "Users")"></div>
<div id="userviewcreate" style="display:none" data-request-url="@Url.Action("Create", "Users")"></div>
<div id="btnSave" style="display:none" data-request-url="@Url.Action("Create", "Users")"></div>
@*<div id="btnSave" style="display:none" data-request-url="@Url.Action("Create", "Users")"></div>*@
@section Scripts {
    <script src="~/resources/js/userprofile.js"></script>
<script>
        function dashboardbackOnClick() {
            window.location.assign("http://localhost:27035/UserHome");
        }
</script>


}

