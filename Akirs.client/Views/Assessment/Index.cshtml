
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

    var enrId = Session["EnrollID"];

}
<style>
    .form-group input {
        text-align: right;
    }

    .hideModal {
        display: block;
    }

    .showM {
        display: none;
    }
</style>
<input type="hidden"
       value="@enrId" id="eid" />

<input type="hidden"
       id="nid" />

<input type="hidden"
       id="emailhid" />

<input type="hidden"
       id="comphone" />
<input type="hidden"
       id="compname" />
<input type="hidden"
       id="compSurname" />
<input type="hidden"
       id="amount" />
@*<input type="hidden"
    id="directnetid" />*@

<div id="forassess">
    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-12">

                <h1 class="page-header">Assessment</h1>
                <select id="drpAssesmentYear" style="border: 1px solid grey; border-radius: 7px; padding: 10px;outline:none;"></select>
            </div>
        </div>



        <div class="row" id="directassessment_partial" style="margin-top:15px;">

            <div class="col-lg-12">

                <div class="panel panel-default">

                    <div class="panel-heading text-center">

                        <i class="fa fa-money"></i>User Assessment Information

                    </div>
                    <div class="panel-body ">

                        <div class="form-horizontal row">

                            <div class="form-group col-md-6">

                                <div style="padding-left:15px;">
                                    <label>EnrollmentID:</label>
                                    <span id="lblEnrollId"></span>
                                </div>
                            </div>
                            <div class="form-group col-md-6" style="display:flex; justify-content:flex-end; align-items:flex-end">
                                <div>
                                    <label>First Name:</label>
                                    <span id="lblfullname"></span>

                                </div>

                            </div>

                        </div>

                    </div>
                    <div class="panel panel-default">

                        <div class="panel-heading" style="text-align:center !important">

                            Assesment Details

                        </div>
                        <div class="panel-body">

                            <div class="col-lg-6">

                                <div role="form">

                                    <div class="form-group row">

                                        <label class="col-md-5">Total Income: </label>
                                        <label id="lblincome" class="col-md-7">:</label>

                                    </div>
                                    <div class="form-group row">

                                        <label class="col-md-5">20% Gross Income: </label>
                                        <label id="lblgrossincome" class="col-md-7">:</label>

                                    </div>

                                </div>

                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">

                                <div role="form">

                                    <div class="form-group row">

                                        <label class="col-md-5" style="display:flex; justify-content:flex-end">Total FPA: </label>
                                        <label id="lbltotalpfa" class="col-md-7"></label>

                                    </div>
                                    <div class="form-group row">

                                        <label class="col-md-5" style="display:flex; justify-content:flex-end">Taxable Income: </label>
                                        <label id="lbltaxableincome" class="col-md-7"></label>

                                    </div>

                                </div>

                            </div>
                            <div class="col-lg-6">

                                <div class="form-group row">

                                    <label class="col-md-5">Consolidated Allowance: </label>
                                    <label id="lblconsolidated_allowance" class="col-md-7"></label>

                                </div>

                            </div>

                        </div>
                        <div class="form-group text-center">
                            <label style="color: #00f">Tax Payable: </label><span id="lbldirectnetid" style="color: #00f"></span>

                        </div>

                    </div>

                </div>
            </div>

            <div class="text-center">
                @*<button class="btn btn-primary btn-lg" id="verify" type="button">Verify Payment</button>*@
                <button class="btn btn-primary btn-lg" id="verify1" type="button">Verify Payment</button>
            </div>
        </div>


    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:600px">
        <div class="modal-content" id="modifyAssessment">

            <div class="modal-header" style="padding-top: 0 !important">
                <div class="row">
                    <div class="col-md-6" style="border-right : 1px solid gray">
                        <p><b>Old Income Declared</b> </p><span style="margin-left: 10px" id="incomeDeclared">10000</span>
                    </div>
                    <div class="col-md-6">
                        <p><b>New Income declared</b></p><span style="margin-left: 10px" id="nIncomeDeclared">10000</span>
                    </div>

                </div>

            </div>

            <div class="modal-body" style="padding-top: 0 !important; padding-bottom: 0 !important">
                <div class="row">

                    <div class="col-md-12" style="border-bottom : 1px solid gray">
                        <h4 class="text-center">DIFFERENCE</h4>
                    </div>
                    <div class="col-md-6" style="border-right : 1px solid gray">
                        <p><b>Amount</b></p><span style="margin-left: 10px" id="amount">10000</span>
                    </div>
                    <div class="col-md-6">
                        <p><b>Tax Payable</b></p><span style="margin-left: 10px" id="taxPayable">10000</span>
                    </div>
                </div>



            </div>
            <div class="modal-footer" style="text-align: center !important">
                @*<button type="submit" class="btn btn-primary btn_disable" id="btnSave" value="1"><i class="fa fa-save"></i>Save</button>*@
                <button class="btn btn-primary btn-lg" id="verifyPayee" type="button">Make Payment</button>
            </div>

        </div>

        <div class="modal-content" id="newAssesment">

            <div class="modal-body" style="padding-top: 0 !important; padding-bottom: 0 !important">
                <div class="row">

                    <div class="col-md-12" style="border-bottom : 1px solid gray">
                        <h4 class="text-center">Assessment</h4>
                    </div>
                    <div class="col-md-6" style="border-right : 1px solid gray">
                        <p><b>Amount Declared</b></p><span style="margin-left: 10px" id="amountDeclared"></span>
                    </div>
                    <div class="col-md-6">
                        <p><b>Tax Payable</b></p><span style="margin-left: 10px" id="taxPayablee"></span>
                    </div>

                </div>

            </div>
            <div class="modal-footer" style="text-align: center !important">
                <button class="btn btn-primary btn-lg" id="verify" type="button">Make Payment</button>

            </div>
        </div>
    </div>
    <div class="ajax-loader">
        <img src="~/assets/images/ajax-loader.gif" class="img-responsive" />
    </div>
</div>
<div id="directAssessmentload" style="display:none" data-request-url="@Url.Action("GetIncomeYear", "Assessment")"></div>

<div id="directAssessmentdetails" style="display:none" data-request-url="@Url.Action("AssessmentDetails", "Assessment")"></div>

<div id="getEmail" style="display:none" data-request-url="@Url.Action("GetEmail", "Assessment")"></div>
<div id="getCompany" style="display:none" data-request-url="@Url.Action("checkCompanyData", "Assessment")"></div>
<div id="getUser" style="display:none" data-request-url="@Url.Action("checkUserData", "Assessment")"></div>
<div id="getNetTax" style="display:none" data-request-url="@Url.Action("GetNetTaxPaid", "Assessment")"></div>


@section Scripts {
    <script src="~/resources/js/assessment.js"></script>
}


